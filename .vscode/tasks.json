{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [{
    "isBuildCommand": true,
    "taskName": "tsc",
    "command": "tsc",
    "args": ["--sourceMap", "-w", "${file}"],
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "isBackground": true,
    "problemMatcher": "$tsc-watch"
  }]
}
